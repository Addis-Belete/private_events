<h3>Event creator</h3>
<%= @event.title %>
<%= @event.description %>
<%= @event.date_of_event %>
 <%= button_to "Attend", attended_event_event_path(@event), method: :post, confirm: "really?" %>

<% if @event.attendees.empty? %>
    <%= "no user attended" %>
    
<% else %>

<%= button_to 'Attend', attend_path(@event), method: :post, confirm: 'really?' %>
<% @event.attendees.each do |attendee| %>
<%= attendee.name %>
<% end %>
<% end %>

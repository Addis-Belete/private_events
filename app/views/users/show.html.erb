<%= link_to "Back to Event page", events_path %>

<% if @user.attended_events.empty? %>
<%= "The user doesnt attended any event" %>
<% end %>
<p><strong>Created Events by You</strong></p>

<% @created_events.each do |event| %>
<ul>
<li>
<%= event.description %>
</li>
</ul>
<% end %>
<br>
<p><strong> Past Event</strong></p>
<% if @past_events.empty? %>
<%= "There is no past event attended" %>
<% else %>
<% @past_events.each do |past_events| %>
<ul>
<li>
<%= past_events.description %>
</li>
</ul>
<% end %>
<% end %>
<p><strong> Up coming Event</strong></p>
<% if @upcoming_events.empty? %>
<%= "The there is no upcoming event attended" %>
<% else %>
<% @upcoming_events.each do |upcoming_events| %>
<ul>
<li>
<%= upcoming_events.description %>
</li>
</ul>
<% end %>
<% end %>